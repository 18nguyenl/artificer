{
  "compilerOptions": {
    "module": "es6",
    "lib": ["es6", "dom"],
    "target": "es6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@interfaces/pantheon": ["src/Interfaces/Pantheon"],
      "@pantheon/*": ["src/components/Pantheon/*"],
      "@interfaces/planes": ["src/Interfaces/Planes"],
      "@planes/*": ["src/components/Planes/*"]
    }
  },
  "exclude": ["node_modules", "tests"],
  "include": ["src"]
}
